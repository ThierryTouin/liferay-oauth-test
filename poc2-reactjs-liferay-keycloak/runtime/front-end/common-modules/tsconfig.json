{
  "compilerOptions": {
    "target": "es5",                 // Compatibility with older browsers
    "module": "commonjs",            // Used for Node.js or CommonJS
    "strict": true,                  // Enables all strict type-checking options
    "jsx": "react",                  // Supports JSX for React
    "declaration": true,             // Generates declaration files (.d.ts)
    "declarationDir": "./dist/types",// Directory for generating declaration files
    "outDir": "./dist",              // Output directory for compiled files
    "rootDir": "./src",              // Source directory for TypeScript files
    "esModuleInterop": true,         // Enables compatibility between CommonJS and ES modules
    "moduleResolution": "node",      // Facilitates importing with CommonJS modules
    "resolveJsonModule": true        // Allows importing JSON modules
  },
  "include": [
    "src/**/*"                       // Include all files in the src directory
  ],
  "exclude": [
    "node_modules"                   // Exclude dependencies from the project
  ]
}

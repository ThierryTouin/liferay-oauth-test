{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "common-components": ["packages/common-components/src"]
    },
    "declaration": true,
    "outDir": "./build",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react", 
    "types": ["react", "react-dom"],
    "typeRoots": ["node_modules/@types", "src/types"], // Include custom types
  },
  "include": [
    "packages/**/*",
    "src/**/*",
    "src/types/**/*.d.ts"   
  ], 
  "exclude": [
    "node_modules",
    "build"                   // Exclude dependencies from the project
  ]
}

{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "common-security": ["packages/common-security/src"],
      "common-components": ["packages/common-components/src"]
    },
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "strict": true,  
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "jsx": "react",  
    "types": ["react", "react-dom"],
    "typeRoots": ["node_modules/@types", "src/types"] // Include custom types
  },
  "include": ["packages/**/*"], 
  "exclude": ["node_modules"]  // Exclut node_modules de la compilation
}
